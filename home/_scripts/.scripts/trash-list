#!/usr/bin/env bash
TRASH_DIR="$HOME/.local/share/trash/store"
LOG_FILE="$HOME/.local/share/trash/trash.log"

show_all=false
if [[ "$1" == "--all" ]]; then
    show_all=true
fi

if [[ ! -s "$LOG_FILE" ]]; then
    echo "Trash is empty."
    exit 0
fi

current_time=$(date +%s)
current_dir=$(pwd)

awk -F, -v now="$current_time" -v pwd="$current_dir" -v show_all="$show_all" '
function time_ago(ts) {
    diff = now - ts
    if (diff < 60) return diff "s"
    if (diff < 3600) return int(diff / 60) "m"
    if (diff < 86400) return int(diff / 3600) "h"
    return int(diff / 86400) "d"
}
{
    if (show_all == "true" || index($3, pwd) == 1) {
        printf "%-19s %-5s %s â†’ %s\n", strftime("%Y-%m-%d %H:%M:%S", $1), "(" time_ago($1) ")", $3, $2
    }
}' "$LOG_FILE" | sort -k1,2
