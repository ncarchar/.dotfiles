set $mod Mod1

output DP-1 scale 1

font pango:Berkeley Mono 16

seat * xcursor_theme capitaine-cursors 33

focus_follows_mouse no

input * {
    repeat_rate 30
    repeat_delay 300
}

gaps inner 6
for_window [title="Picture-in-Picture"] floating enable, border none, sticky enable, resize set 680 px 390 px, move position 20 px 25 px

exec gammastep -l 40:-80 -b 1:0.85 -t 6500:5500
exec swaybg -i /home/ncarchar/.config/feh/.leaves.jpg -m fill

# use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 10%+ --limit 1.0; exec pkill -RTMIN+2 i3blocks
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 10%-; exec pkill -RTMIN+2 i3blocks
bindsym XF86AudioMute        exec wpctl set-mute   @DEFAULT_AUDIO_SINK@ toggle; exec pkill -RTMIN+2 i3blocks
bindsym XF86AudioMicMute     exec wpctl set-mute   @DEFAULT_AUDIO_SOURCE@ toggle; exec pkill -RTMIN+2 i3blocks

# bemenu
bindsym $mod+d exec bemenu-run  --fn 'Berkeley Mono 16' --tb '#282C34' --tf '#61AFEF' --hb '#98C379' --hf '#282C34' --hp '8' --list 10 -W 0.2 --counter 'always'

# screen shot
bindsym $mod+Shift+s exec grim -g "$(slurp)" - | wl-copy

# open shortcuts
bindsym $mod+t exec alacritty -e bash -lc "tmux"
bindsym $mod+b exec librewolf
bindsym $mod+Shift+p exec librewolf --private-window
bindsym $mod+f exec GTK_THEME=Adwaita:dark thunar
bindsym $mod+Shift+q kill

# move focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+x split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10; workspace number $ws10

# restart i3 inplace
bindsym $mod+Shift+r restart

# disable scroll to switch
bindsym button4 nop
bindsym button5 nop

# resize window
mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # return to normal mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

bar {
        status_command i3blocks -c ~/.config/i3blocks/config
        position top
        colors {
            focused_workspace  #282C34 #61AFEF #282C34
            active_workspace   #282C34 #282C34 #ABB2BF
            inactive_workspace #282C34 #282C34 #ABB2BF
            urgent_workspace   #282C34 #282C34 #ABB2BF
        }
}

client.focused          #52565C #52565C #61AFEF
client.unfocused        #282C34 #282C34 #ABB2BF
client.focused_inactive #282C34 #282C34 #ABB2BF
client.urgent           #282C34 #282C34 #ABB2BF
